@page "{id:int}"
@using WebApplication1.App_Data
@using WebApplication1.App_Data.proxy_shet
@model WebApplication1.Pages.Show

@{
    //Layout = null;
    ViewData["Title"] = "Přehled dokumentů";

}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    @{
        Dokument tmp= new Dokument();
        tmp.RubrikaId = Convert.ToInt32(RouteData.Values["Id"]);
        List<Dokument> dokuments= new List<Dokument>();
        dokuments = DokumentTableProxy.Select_rubr(tmp);
        if (dokuments.Count==0) {
            <h2 align="center">Je nám líto, tato rubrika je prázdná</h2>
        }
        foreach (var dokument in dokuments) {
            <div>
                <h2>@dokument.Nadpis</h2>
                <small>@dokument.Datum.ToString("dd.MM.yyyy")</small><br/>
                <p>@dokument.Obsah</p>
                <hr/>
            </div>
        }
    }
    

</div>
</body>
</html>